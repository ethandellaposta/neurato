{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default (Debug)",
            "description": "Debug build with full symbols and optimizations disabled",
            "binaryDir": "${sourceDir}/build/debug",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "BUILD_TESTS": "ON",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build with minimal debug info",
            "binaryDir": "${sourceDir}/build/release",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF",
                "BUILD_TESTS": "OFF",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "description": "Release build with debug information for profiling",
            "binaryDir": "${sourceDir}/build/relwithdebinfo",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "BUILD_TESTS": "OFF",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "ci",
            "displayName": "CI Build",
            "description": "Configuration for continuous integration",
            "binaryDir": "${sourceDir}/build/ci",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF",
                "BUILD_TESTS": "OFF",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
                "CMAKE_UNITY_BUILD": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "displayName": "Build Debug",
            "description": "Build the debug configuration"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "displayName": "Build Release",
            "description": "Build the release configuration"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo",
            "displayName": "Build RelWithDebInfo",
            "description": "Build the release with debug info configuration"
        },
        {
            "name": "ci",
            "configurePreset": "ci",
            "displayName": "Build CI",
            "description": "Build the CI configuration"
        },
        {
            "name": "verbose",
            "configurePreset": "default",
            "displayName": "Verbose Debug Build",
            "description": "Build debug with verbose output",
            "verbose": true
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "displayName": "Run Tests (Debug)",
            "description": "Run all tests in debug configuration",
            "output": {
                "outputOnFailure": true,
                "shortProgress": true
            }
        },
        {
            "name": "release",
            "configurePreset": "release",
            "displayName": "Run Tests (Release)",
            "description": "Run all tests in release configuration",
            "output": {
                "outputOnFailure": true,
                "shortProgress": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "default",
            "configurePreset": "release",
            "displayName": "Package Release",
            "description": "Create a package from the release build",
            "generators": ["TGZ"]
        }
    ]
}
