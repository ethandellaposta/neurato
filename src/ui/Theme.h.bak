// Inspired by modern DAWs like Ableton, Bitwig, and Logic Pro with refined aesthetics.
struct Theme
{
    // --- Modern background layers (darkest to lightest) ---
    static constexpr uint32_t bgDeepest = 0xff060912;   // Main window bg
    static constexpr uint32_t bgBase = 0xff0d1320;      // Panel backgrounds
    static constexpr uint32_t bgSurface = 0xff171f31;   // Cards, strips, headers
    static constexpr uint32_t bgElevated = 0xff222c44;  // Hover states, raised elements
    static constexpr uint32_t bgHighlight = 0xff2e3d5f; // Selected/active bg

    // --- Modern borders & dividers ---
    static constexpr uint32_t border = 0xff2a3650;
    static constexpr uint32_t borderLight = 0xff3a4a6a;
    static constexpr uint32_t borderAccent = 0xff5aa7ff;

    // --- Modern text hierarchy ---
    static constexpr uint32_t textPrimary = 0xffffffff;   // Pure white for main text
    static constexpr uint32_t textSecondary = 0xffd0d8ec; // Light gray for secondary
    static constexpr uint32_t textDim = 0xff93a2c0;       // Dimmed text
    static constexpr uint32_t textDisabled = 0xff5d6a86;  // Disabled text

    // --- Modern accent colors (professional palette) ---
    static constexpr uint32_t accentBlue = 0xff5aa7ff;   // Primary accent
    static constexpr uint32_t accentGreen = 0xff47df95;  // Success/play state
    static constexpr uint32_t accentOrange = 0xffffb056; // Warning/recording
    static constexpr uint32_t accentRed = 0xffff5e73;    // Record/stop/error
    // Modern theme system for Ampl UI
    // Easily add, select, and swipe through themes
    struct Theme
    {
        struct Palette
        {
            uint32_t bgDeepest, bgBase, bgSurface, bgElevated, bgHighlight;
            uint32_t border, borderLight, borderAccent;
            uint32_t textPrimary, textSecondary, textDim, textDisabled;
            uint32_t accentBlue, accentGreen, accentOrange, accentRed, accentPurple, accentCyan,
